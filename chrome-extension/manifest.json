{
  "name": "Nawabari Net",
  "version": "0.1",
  "manifest_version": 2,
  "description": "好きなページを塗れます",
  "permissions": [ "http://nawabari-net.com/" ],
  "browser_action": {
    "default_title": "Nawabari Net",
    "default_popup": "browser_action.html"
  },
  "web_accessible_resources": [
      "images/*.png"
  ],
  "background": {
    "scripts": [
      "extension_click_listener.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [
        "lib/jquery.min.js",
        "lib/d3.min.js",
        "paint.js"
      ],
      "run_at": "document_start"
    }
  ]
}
